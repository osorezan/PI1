        }
    </style>

</head>
<body class="body">
<script type="text/javascript">


    function sendToPage(){
        var input = document.getElementById("search").value;
        //alert(input);
        if (input != ""){
            window.location.href = ("Movies?name="+input
                    .replace(" ", "%20"));
            return false;
        }
        else {
            alert('Invalid Input.');
        }
    }
</script>
<div>
    <form action="" onsubmit="return sendToPage()" method="post">
        <input type="text" id="search" class="search" placeholder="Search" value="">
    </form>
</div>

<div id="lower_right"></div>

</body>
